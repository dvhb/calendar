.CalendarMonthSmall
	position relative
	margin-bottom -18px
	margin-top -12px
	overflow hidden
	margin-bottom -19px

.CalendarMonthSmallRowSlider
	position relative
	overflow hidden
	height 114px

.CalendarMonthSmallRowWrapper
	position absolute
	left 0px
	font-size 0px
	white-space nowrap
	top 0

.CalendarMonthSmallRow
	position relative
	display inline-block
	border-left 1px solid #7f7f7f
	margin-left -1px
	margin-top 73px

.CalendarMonthSmallCell
	display inline-block
	vertical-align top
	width 40px
	height 40px
	background #f0f0f0
	border-bottom 1px solid #b6b6b6
	margin-right 1px
	position relative
	padding 4px 6px

	text-shadow 0 1px 0 rgba(255,255,255,0.5)
	text-align right
	ff(medium, 11)
	color #666666
	cursor pointer

.CalendarMonthSmallCellWeekend
	@extend .CalendarMonthSmallCell

	color #b3b3b3

.CalendarMonthSmallCellActive
	@extend .CalendarMonthSmallCell

	background #cfdde6

.CalendarMonthSmallHeaderRight
	ff(light_f, 24)
	color #000
	height 68px;
	position absolute
	top: -71px
	line-height 69px
	padding 0 10px

	right 0

.CalendarMonthSmallHeaderLeft
	@extend .CalendarMonthSmallHeaderRight

	right auto
	left -1px
	border-left 1px solid #cccccc

	sup
		ff(light_f, 14)



.CalendarMonthSmallArrowLeft
	width 19px;
	cursor pointer
	background url("data:image/png;base64,") no-repeat scroll 6px center
	float left
	border-bottom 1px solid #b6b6b6
	height 40px
	margin-right 1px
	margin-top 73px

.CalendarMonthSmallArrowRight
	@extend .CalendarMonthSmallArrowLeft

	float right
	margin-right 0px
	margin-left 1px
	background-position -987px center

.CalendarMonthSmallShadow
	position absolute
	left 0px
	right 0px
	height 72px
	border-bottom 1px solid #b6b6b6

.CalendarMonthSmallShadowLeft
	width 100px
	background: linear-gradient(to right, rgba(255,255,255,1) 0%,rgba(255,255,255,1) 80%,rgba(255,255,255,0) 100%)
	position absolute
	left 0px
	top 0px
	height 71px
	z-index 2

.CalendarMonthSmallShadowRight
	width 200px
	background: linear-gradient(to right, rgba(255,255,255,0) 0%,rgba(255,255,255,1) 10%,rgba(255,255,255,1) 100%);
	position absolute
	right 0px
	top 0px
	height 71px
	z-index 2