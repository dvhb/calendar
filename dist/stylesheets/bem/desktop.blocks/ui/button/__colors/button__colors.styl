.button__blue
    color #78a4be
    background light-blue
    border-right-color dark-blue
    border-bottom-color dark-blue
    &:disabled
        color #dbdbdb
    &:hover
        color #0078c1
        background #E3F3FD


.button__lightblue
    color #86b5d2
    background light-blue
    border-right-color dark-blue
    border-bottom-color dark-blue

.button__blue:active
        color blue !important

.button__bgblue
    background #cce4f3
    &:hover
        color #333
        background #E3F3FD
    &:active
        background-color #E3F3FD !important

.button__bgrose
    background #f2d3d3
    &:hover
        background #FAE5E5
    &:active
        background-color #FAE5E5 !important

.button__grey
    background-color #dbdbdb
    &[disabled="disabled"]
        background-color #f7f7f7

.button__nobg, .button__nobg:active
    background none !important
    border none !important

.button__noborder, .button__noborder:active
    border none !important

.button__darkblue
    color blue
    background light-blue
    border-right-color #00296c !important
    border-bottom-color #00296c !important
    &:disabled
        color #dbdbdb

.button_onwhite
    background-color #f1f1f1
    &:hover
        background-color #f9f9f9
.button__linkcolor
    color linkcolor !important