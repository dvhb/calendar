.calendarMonthRow
	overflow hidden

.calendarMonthCol
	background #f0f0f0
	float left

.calendarMonthCell
	float left
	height 40px
	border-bottom 1px solid #b6b6b6
	width 14.2857%
	text-shadow 0 1px 0 rgba(255,255,255,0.5)
	border-left 1px solid #fff
	margin-bottom 1px
	position relative
	padding 2px 6px

	text-align right
	background #f0f0f0
	ff(medium, 11)
	color #666666
	cursor pointer

	&:first-child
		border-left-color transparent

.calendarMonthCellHeader
	@extend .calendarMonthCell

	text-align center
	background #e6e6e6
	ff(medium, 11)
	line-height 36px
	color #333333
	cursor default

.calendarMonthCellWeekend
	@extend .calendarMonthCell

	color #b3b3b3

.calendarMonthCellActive
	@extend .calendarMonthCell

	background #cfdde6



.calendarMonthInviteBlock
	position absolute
	left 2px
	bottom 2px
	z-index 2

.calendarMonthInvite
	background #da0000
	color #fff
	ff(bold, 16)
	line-height 14px
	text-align center
	height 14px
	width 17px
	border 1px solid #fff
	margin-right -1px
	float left
	border-radius 1px
	text-shadow none
	box-sizing content-box

.calendarMonthInviteAccepted
	@extend .calendarMonthInvite

	ff(bold, 11)
	line-height 14px
	background #0078c1

.calendarMonthFill
	background-image: url('data:image/png;base64,')
	position absolute
	height 100%
	left 0
	right 0
	bottom 0