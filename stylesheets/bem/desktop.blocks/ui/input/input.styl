.textinput
    position relative
    background #FFF
    border 1px solid #e5e5e5
    padding-left 14px
    height 45px
    ff(light_f,14)
    margin 10px 0
    display inline-block
    width 100%
    -webkit-appearance none
    border-radius 0
    &:focus
        outline-offset none !important
        outline none !important


.textinput__bluefocus
    &:focus
        border 1px solid #619dc2 !important
        border-top 1px solid #0078c1 !important

.textinput__topborder
    border-top 1px solid #a1a1a1 !important

.textinput__bottomborder
    border-bottom 1px solid #959595 !important
.textinput__icon
    padding-left 41px
.textinput__iconPeople
    @extend .textinput__icon
    background-image url('data:image/png;base64,')
    bg(left 14px)
.textinput_icon__calendar
    width 45px
    height 45px
    border 1px solid #d6d6d6
    background #FFF url('data:image/png;base64,') no-repeat center center
    display block
    position absolute
    top 10px
    right 0
.textinput_icon
    display block
    width 100%
    position relative


.textarea, textarea
    box-sizing border-box
    background #FFF
    border 1px solid #d6d6d6
    padding-left 0.5em
    padding-top 0.5em
    ff(normal,14,1)
    margin 0
    margin-top 1em
    margin-bottom 1em
    display inline-block
    width 100%
    -webkit-appearance none
    border-radius 0
    &:focus
        outline-offset none !important
        outline none !important


input:focus, textarea:focus, isindex:focus, keygen:focus, select:focus
    outline-offset none

:focus
    outline none

.mce-tinymce
    margin-bottom 1em !important


.textareaPopupEvent
    height 100px
    padding-right 15px
    padding-top 10px
    margin-bottom 0px