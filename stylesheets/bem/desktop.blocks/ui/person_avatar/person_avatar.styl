.person_avatar
    margin-right 18px
    margin-bottom 18px 
    width 54px
    height 54px
    border-radius 50%
    padding 2px 2px 2px 2px
    display inline-block
    position relative
    sf()
    a
        width 50px
        height 50px
        display block
        position relative
        sf()
        &:hover
            >.person-avatar-tooltip
                display block
        img
         border-radius 50%
         width 50px
         height 50px
         position relative
         
