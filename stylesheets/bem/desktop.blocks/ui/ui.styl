@import 'autocomplete/autocomplete'
@import 'button/button.styl'

@import 'form/form.styl'
@import 'form_error/form_error.styl'

@import 'input/input.styl'
@import 'label/label.styl'

@import 'person_avatar/person_avatar'

.disable
    display none !important
.select-group
	position relative

select
	height 45px
	display block
	margin-top 1px
	//margin-bottom 1em
	width 100%
	background-color #fff
	-webkit-appearance none
	border-radius 0px
	border 1px solid transparent
	border-bottom-color #959595
	position relative
	padding-left 10px

.select-arrow
	background-image: url('data:image/png;base64,');
	bg()
	width 45px
	height 45px
	display block
	top 0
	right 0
	position absolute
	border-left 1px solid #e9eaeb
	pointer-events none

textarea
	width 99%

input
	&:focus
		outline-offset none !important
		outline none !important










