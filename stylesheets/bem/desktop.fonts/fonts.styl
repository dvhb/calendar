// Mixin for font load

fontPath = "../bem/desktop.fonts/OpenSans/"

fontload(fontName,fontFile,fontWidth,fontStyle)
    @font-face
      font-family fontName
      src url(fontPath fontFile '.eot')
      src url(fontPath fontFile '.eot?#iefix') format('pxbedded-opentype')
      src url(fontPath fontFile '.woff') format('woff'), url(fontPath fontFile '.ttf')  format('truetype')
      src url(fontPath fontFile '.svg#09be4bfe8975a657af6444a6f1d73848') format('svg')
      font-style fontStyle
      font-weight fontWidth

